@model AdminLTE.MVC.ViewModel.ExerciseReportViewModel

@{
    ViewData["Title"] = "Exercises";
}

<h1>Exercises</h1>
<p><a asp-controller="Exercises" asp-action="CreatePDF" asp-route-id="@Model.UnitId" target="_blank">PDF</a></p>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExerciseList[0].Name)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ExerciseList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <p><a asp-controller="Units" asp-action="Report" asp-route-id="@Model.UnitId" asp-route-source="exercise">Back to Units</a></p>
</div>